{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "declaration": true,
    "lib": ["es2015", "es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "retro-board-*": ["../retro-board-*/src"]
    },
    "types": []
  },
  "include": ["src"],
  "references": [{
    "path": "../retro-board-common/tsconfig.json"
  }]
}